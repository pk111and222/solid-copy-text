{
  "name": "solid-copy-text",
  "version": "0.0.1",
  "description": "a copy to clipboard components for SolidJS",
  "license": "MIT",
  "author": "zeter",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pk111and222/solid-copy-text"
  },
  "homepage": "https://github.com/pk111and222/solid-copy-text#readme",
  "bugs": {
    "url": "https://github.com/pk111and222/solid-copy-text/issues"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {},
  "exports": {
    "solid": {
      "development": "./dist/dev.jsx",
      "import": "./dist/index.jsx"
    },
    "development": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dev.js"
      }
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {},
  "scripts": {
    "dev": "vite serve example",
    "build": "tsup",
    "test": "vitest",
    "prepublishOnly": "pnpm build",
    "format": "prettier --ignore-path .gitignore -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"dev/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{ts,tsx}",
    "lint:types": "tsc --noEmit",
    "update-deps": "pnpm up -Li"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.3"
  },
  "peerDependencies": {
    "solid-js": "^1.8.17"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.21.4",
    "esbuild-plugin-solid": "^0.5.0",
    "eslint": "^8.45.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "jsdom": "^22.1.0",
    "prettier": "3.2.5",
    "solid-js": "^1.7.8",
    "tsup": "^8.0.2",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.4.5",
    "vite": "^4.4.6",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "solid"
  ],
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "pnpm": ">=8.6.0"
  }
}
